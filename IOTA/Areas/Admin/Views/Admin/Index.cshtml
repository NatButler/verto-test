@model IOTA.Areas.Admin.Models.HomePage;
@{
    ViewData["Title"] = "Admin Page";
}

<h2>Home page content</h2>
<form data-abide novalidate method="post" asp-controller="Admin" asp-action="Edit">
    <div class="grid-x grid-margin-x">
        <div class="cell">
            <div data-abide-error class="alert callout" style="display: none;">
                <p><i class="fi-alert"></i> There are some errors in your form.</p>
            </div>
        </div>
    </div>
    <input type="hidden" value="@Model.Id" name="Id" />
    <div class="grid-x grid-margin-x">
        <div class="cell small-12 large-6">
            <label>
                Slider overlay heading
                <input type="text" placeholder="Enter a slider heading" value="@Model.SliderOverlayHeading" name="SliderOverlayHeading" required maxlength="50" />
                <span class="form-error">
                    This field is required.
                </span>
            </label>
            <p class="help-text">This field allows a maximum of 50 characters</p>
        </div>
        <div class="cell small-12 large-6">
            <label>
                Top banner heading
                <input type="text" placeholder="Enter a banner heading" value="@Model.TopBannerHeading" name="TopBannerHeading" required maxlength="50" />
                <span class="form-error">
                    This field is required.
                </span>
            </label>
            <p class="help-text">This field allows a maximum of 50 characters</p>
        </div>
        <div class="cell small-12 large-10">
            <label>
                Top banner text
                <input type="text" placeholder="Enter banner text" value="@Model.TopBannerText" name="TopBannerText" required maxlength="100" />
                <span class="form-error">
                    This field is required.
                </span>
            </label>
            <p class="help-text">This field allows a maximum of 100 characters</p>
        </div>
        <div class="cell small-12 large-6">
            <label>
                Case study 1 heading
                <input type="text" placeholder="Enter a case study heading" value="@Model.CaseStudy1Heading" name="CaseStudy1Heading" required maxlength="50" />
                <span class="form-error">
                    This field is required.
                </span>
            </label>
            <p class="help-text">This field allows a maximum of 50 characters</p>
        </div>
        <div class="cell small-12 large-8">
            <label>
                Case study 1 summary
                <textarea placeholder="Enter case study summary" name="CaseStudy1Summary" rows="4" data-abide-ignore maxlength="200">@Model.CaseStudy1Summary</textarea>
            </label>
            <p class="help-text">This field allows a maximum of 200 characters</p>
        </div>
        <div class="cell small-12 large-6">
            <label>
                Case study 2 heading
                <input type="text" placeholder="Enter a case study heading" value="@Model.CaseStudy2Heading" name="CaseStudy2Heading" required maxlength="50" />
                <span class="form-error">
                    This field is required.
                </span>
            </label>
            <p class="help-text">This field allows a maximum of 50 characters</p>
        </div>
        <div class="cell small-12 large-8">
            <label>
                Case study 2 summary
                <textarea placeholder="Enter a case study summary" name="CaseStudy2Summary" rows="4" data-abide-ignore maxlength="200">@Model.CaseStudy2Summary</textarea>
            </label>
            <p class="help-text">This field allows a maximum of 200 characters</p>
        </div>
        <div class="cell small-12 large-6">
            <label>
                Case study 3 heading
                <input type="text" placeholder="Enter a case study heading" value="@Model.CaseStudy3Heading" name="CaseStudy3Heading" required maxlength="50" />
                <span class="form-error">
                    This field is required.
                </span>
            </label>
            <p class="help-text">This field allows a maximum of 50 characters</p>
        </div>
        <div class="cell small-12 large-8">
            <label>
                Case study 3 summary
                <textarea placeholder="Enter a case study summary" name="CaseStudy3Summary" rows="4" data-abide-ignore maxlength="200">@Model.CaseStudy3Summary</textarea>
            </label>
            <p class="help-text">This field allows a maximum of 200 characters</p>
        </div>
        <div class="cell small-12 large-6">
            <label>
                Bottom image overlay heading
                <input type="text" placeholder="Enter a banner heading" value="@Model.ImageOverlayHeading" name="ImageOverlayHeading" required maxlength="50" />
                <span class="form-error">
                    This field is required.
                </span>
            </label>
            <p class="help-text">This field allows a maximum of 50 characters</p>
        </div>
        <div class="cell small-12 large-10">
            <label>
                Bottom image overlay text
                <input type="text" placeholder="Enter banner text" value="@Model.ImageOverlayText" name="ImageOverlayText" required maxlength="100" />
                <span class="form-error">
                    This field is required.
                </span>
            </label>
            <p class="help-text">This field allows a maximum of 100 characters</p>
        </div>
        <div class="cell small-12">
            <button type="submit" class="button">Save</button>
        </div>
    </div>
</form>
